{{!-- Import the main layout --}}
{{> layouts/main}}

{{!-- Set the title of the page --}}
{{#block "title"}}Home{{/block}}

{{!-- Set the main content of the page --}}
{{#block "content"}}
<div class="container">
    <h2>Welcome to the Blog Site!</h2>
    {{#if posts.length}}
    <h3>Latest Posts:</h3>
    <div class="posts">
        {{#each posts}}
        <div class="post">
            <h4>{{title}}</h4>
            <p>Posted by {{username}} on {{createdAt}}</p>
            <p>{{content}}</p>
            <hr>
            {{!-- Render comments for each post --}}
            {{#each comments}}
            {{> partials/comment comment=this.comment username=this.User.username createdAt=this.createdAt}}
            {{/each}}
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>No posts available.</p>
    {{/if}}
</div>
{{/block}}